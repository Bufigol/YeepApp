<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labs.josemanuel.yeep.SignUpActivity"
    android:background="@drawable/bg_wish_sign">
    <!--android:background="@style/background_fill1"-->


    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/AuthLinearLayout_Sign"
        android:background="@drawable/nube_sign"
        android:gravity="center_horizontal"
        android:paddingTop="45dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/userFieldSign"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:hint="@string/username_hint"
        android:textColorHint="@android:color/darker_gray">
        <requestFocus />
        </EditText>

    <EditText
        android:layout_below="@+id/userFieldSign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailFieldSign"
        android:textColor="@android:color/black"
        android:hint="@string/emailField_hint"
        android:textColorHint="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/password_sing"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="@string/password_sing"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/emailFieldSign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </LinearLayout>

    <Button
        android:id="@+id/cancelBtn"
        android:text="@string/cancelBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/button_custom_cancel"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginRight="107dp"
        android:layout_marginEnd="107dp" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signBtn_label"
        android:textSize="15sp"
        android:onClick="comrobarDatos"
        android:background="@drawable/button_custom"
        android:layout_alignTop="@+id/cancelBtn"
        android:layout_toLeftOf="@+id/cancelBtn"
        android:layout_toStartOf="@+id/cancelBtn"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp" />


</RelativeLayout>



